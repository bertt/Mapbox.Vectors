<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
    <Version>5.0.2</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>mapbox-vector-tile</PackageId>
    <Authors>Bert Temme</Authors>
    <Company />
    <Product />
    <PackageReleaseNotes />
    <Description>.NET library for encoding/decoding Mapbox Vector tiles</Description>
    <RepositoryUrl>https://github.com/bertt/mapbox-vector-tile-cs</RepositoryUrl>
    <AssemblyVersion>5.0.2.0</AssemblyVersion>
    <FileVersion>5.0.2.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Properties\**" />
    <EmbeddedResource Remove="Properties\**" />
    <None Remove="Properties\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="mapbox.vector.tile.v2.ncrunchproject" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GeoJSON.Net" Version="1.2.19" />
    <PackageReference Include="protobuf-net" Version="3.2.30" />
  </ItemGroup>

</Project>
